<UserControl x:Class="assignment2_LEJ.Views.DefectImageView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:assignment2_LEJ.Views"
        xmlns:viewModels="clr-namespace:assignment2_LEJ.ViewModels"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        mc:Ignorable="d"
        Background="White" >
    <UserControl.DataContext>
        <viewModels:DefectImageViewModel />
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="0">
            <Image Source="{Binding LoadedImage}" Stretch="Uniform"
                   RenderTransformOrigin="0.5,0.5"> 
                <Image.RenderTransform>
                    <ScaleTransform ScaleX="{Binding Scale}" 
                            ScaleY="{Binding Scale}" />
                </Image.RenderTransform>
            </Image>
        </ScrollViewer>
        <ToolBarTray Grid.Row="1" DockPanel.Dock="Top">
            <ToolBar>
                <Button Command="{Binding ZoomInCommand}" Content="확대" />
                <Button Command="{Binding ZoomOutCommand}" Content="축소" />
            </ToolBar>
        </ToolBarTray>
    </Grid>
</UserControl>
