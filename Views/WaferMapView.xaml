<UserControl x:Class="assignment2_LEJ.Views.WaferMapView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:assignment2_LEJ.Views"
        xmlns:viewModels="clr-namespace:assignment2_LEJ.ViewModels"
        xmlns:converters="clr-namespace:assignment2_LEJ.Converters"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Background="Black">
    <UserControl.DataContext>
        <viewModels:WaferMapViewModel />
    </UserControl.DataContext>
    <UserControl.Resources>
        <converters:GridToCanvasConverter x:Key="GridToCanvasConverter" />
    </UserControl.Resources>
    <Grid>
        <ItemsControl ItemsSource="{Binding DieViewModels}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Rectangle Width="10" 
                               Height="10" 
                               Fill="LightGray" 
                               Stroke="Black" 
                               Margin="1">
                        <Rectangle.RenderTransform>
                            <TranslateTransform 
                                X="{Binding Die.GridCoordinate.Item1, Converter={StaticResource GridToCanvasConverter}}" 
                                Y="{Binding Die.GridCoordinate.Item2, Converter={StaticResource GridToCanvasConverter}}" />
                        </Rectangle.RenderTransform>
                    </Rectangle>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Canvas Background="Black" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
    </Grid>
</UserControl>
